@page
@model EmailModel
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Check Out</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="home" asp-action="Index">Home</a>
                        <a href="./shop.html">Shop</a>
                        <span>Check Out</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <h1>Payment SuccessFullyy</h1>
        <form asp-action="SendEmail" method="post">
            <div>
                <label for="SenderName">Your Name:</label>
                <input type="text" asp-for="SenderName" required />
            </div>
            <div>
                <label for="SenderEmail">Your Email:</label>
                <input type="email" asp-for="SenderEmail" required />
            </div>
            <div>
                <label for="Subject">Subject::</label>
                <input type="text" asp-for="Subject" required />
            </div>
            <div>
                <label for="Message">Message:</label>
                <textarea asp-for="Message" required></textarea>
            </div>
            <div>
                <button type="submit">Send Email</button>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->

@section Scripts {
}
