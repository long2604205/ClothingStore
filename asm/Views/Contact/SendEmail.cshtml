@model asm.Models.EmailModel

@{
    ViewData["Title"] = "Send Email";
}
<!-- Map Begin -->
<div class="map">
    <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3411.2713665380256!2d121.4888324!3d31.2409103!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x35b27057007ff825%3A0xb21d882aa165f2d2!2sEmporio%20Armani!5e0!3m2!1svi!2s!4v1700321562856!5m2!1svi!2s"
        height="500" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
</div>
<!-- Map End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__text">
                    <div class="section-title">
                        <span>Information</span>
                        <h2>Contact Us</h2>
                        @* <p>As you might expect of a company that began as a high-end interiors contractor, we pay
                            strict attention.</p> *@
                    </div>
                    <ul>
                        <li>
                            <h4>上海</h4>
                            <p>EMPORIO ARMANI 上海港汇广场店 - 徐汇区虹桥路1号大门街66号 港汇广场一层143A&B号铺 <br />+021 6418 1566</p>
                        </li>
                        <li>
                            <h4>北京</h4>
                            <p>EMPORIO ARMANI 北京华贸中央广场店 - 北京市朝阳区建国路85号 华贸中央广场1号及4号 <br />+010 6598 9292</p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__form">
                    <div class="alert alert-@ViewBag.Type" role="alert">
                        <strong>@ViewBag.message @ViewBag.Error</strong>
                    </div>
                    <form asp-action="SendEmail" asp-controller="Contact" method="POST">
                        <div class="row">
                            <div class="col-lg-6">
                                <input asp-for="SenderName" type="text" placeholder="Name">
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="SenderEmail" type="text" placeholder="Email">
                            </div>
                            <div class="col-lg-12">
                                <input asp-for="Subject" type="text" placeholder="Subject">
                            </div>
                            <div class="col-lg-12">
                                <textarea asp-for="Message" placeholder="Message"></textarea>
                                <button type="submit" class="site-btn">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
}
