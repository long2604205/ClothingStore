@using Microsoft.AspNetCore.Identity
@using asm.Areas.Identity.Data
@model User
@{
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Profile</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="home" asp-action="Index">Home</a>
                        <span>Profile</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <form asp-action="Index" asp-controller="Account" method="POST">
                <input name="userId" type="hidden" value="@ViewBag.Id" />
                <div class="row justify-content-center">
                    <div class="col-8">
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["msg"]
                            </div>
                        }
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <strong></strong>
                        </div>
                        <h6 class="coupon__code"><span class="icon_tag_alt"></span><a
                                asp-action="manage" asp-controller="account">Click
                                here to manage orders</a></h6>
                        <h6 class="checkout__title">Profile</h6>
                        <div class="row">
                            <div class="checkout__input col-6">
                                <p>First Name<span>*</span></p>
                                <input asp-for="FirstName" type="text" class="checkout__input__add"
                                    value="@ViewBag.firstName">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="checkout__input col-6">
                                <p>Last Name<span>*</span></p>
                                <input asp-for="LastName" type="text" class="checkout__input__add"
                                    value="@ViewBag.lastName">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="checkout__input col-6">
                                <p>Email<span>*</span></p>
                                <input asp-for="Email" type="text" class="checkout__input__add" value="@ViewBag.email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="checkout__input col-6">
                                <p>Phone<span>*</span></p>
                                <input asp-for="PhoneNumber" type="text" class="checkout__input__add"
                                    value="@ViewBag.phone">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input asp-for="Address" type="text" class="checkout__input__add" value="@ViewBag.address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="checkout__input">
                            <p>Town/City<span>*</span></p>
                            <input asp-for="City" type="text" value="@ViewBag.city">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="checkout__input">
                            <p>Country/State<span>*</span></p>
                            <input asp-for="Country" type="text" value="@ViewBag.country">
                            <span asp-validation-for="Country" class="text-danger"></span>

                        </div>
                        <div class="checkout__input">
                            <p>Postcode / ZIP<span>*</span></p>
                            <input asp-for="Postcode" type="text" value="@ViewBag.postcode">
                            <span asp-validation-for="Postcode" class="text-danger"></span>
                        </div>
                        <div class="checkout__input">
                            <p>Gender<span>*</span></p>
                            <select asp-for="Gender" class="form-select" aria-required="true">
                                <option selected value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                        </div>
                        <div class="checkout__input__checkbox text-right">
                            <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn site-btn">Change
                                The Password</a>
                            <button id="login-submit" type="submit" class="site-btn">Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->

@section Scripts {
}
