@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<h1>Roles</h1>
<p>
    <a asp-action="Create">Create New Roles</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @*@if (Model != null)*@
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@Html.DisplayFor(modelitem => item.Id)</td>
                    <td scope="row">@Html.DisplayFor(modelitem => item.Name)</td>
                    <td scope="row">@Html.DisplayFor(modelitem => item.NormalizedName)</td>
                </tr>
            }
    </tbody>
</table>
